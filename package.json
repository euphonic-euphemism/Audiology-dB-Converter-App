{
  "name": "db-converter-app",
  "version": "1.0.8",
  "description": "dB HL to SPL Converter desktop application for audiology use.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux appimage",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win nsis"
  },
  "keywords": [
    "electron",
    "audiology",
    "db",
    "mac",
    "linux",
    "windows"
  ],
  "author": "Audiology Dev <mark.shaver@posteo.net>",
  "license": "ISC",
  "homepage": "https://audiology.com/app",
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.audiologydev.dbconverter",
    "productName": "dBAudioConverter",
    "files": [
      "**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Science",
      "maintainer": "Audiology Dev <dev@audiology.com>"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.medical",
      "identity": null
    },
    "win": {
      "target": "nsis"
    }
  }
}
